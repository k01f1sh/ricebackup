[module/spotify]
	type = custom/ipc

	hook-0 = echo ""
	hook-1 = python3 /home/nk01/.config/polybar/scripts/spotify/spotify_status.py

	initial = 2

	format-padding = 1
	format-underline = ${colors.stx}
	format-foreground = ${colors.hlt}
	format-background = ${colors.bg2}

	line-size = 1

	click-left = i3-msg '[class="Spotify"] focus'

[module/previous]
	type = custom/script

	interval = 86400

	format = "%{T3}<label>"
	format-padding = 2

	exec = echo ""
	exec-if = "pgrep spotify"

	format-underline = ${colors.stx}
	format-background = ${colors.bg2}
	format-foreground = ${colors.stx}

	line-size = 1

	click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

[module/playpause]
	type = custom/ipc

	hook-0 = echo ""

	hook-1 = echo ""

	hook-2 = echo ""

	initial = 3

	format-underline = ${colors.stx}
	format-background = ${colors.stx}
	format-foreground = ${colors.bg2}
	format-padding = 2

	click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

