	interface = wlp2s0

	interval = 3.0

	label-connected = %essid%
	label-connected-padding = 1
	label-connected-foreground = ${colors.hlt}
	;label-disconnected = %ifname% disconnected
	;label-disconnected-foreground = ${colors.clr7}

