[module/title]
	type = internal/xwindow

	format = :<label>
	format-background = ${colors.bg2}
	format-foreground = ${colors.hlt}
	format-underline = ${colors.stx}
	format-padding = 2

	label =%title%
	label-maxlen = 69

[module/filesystem]
	type = internal/fs

	interval = 25

	mount-0 = /

	format-background = ${colors.bg2}
	format-padding = 2
	format-mounted-prefix = " /:"
	format-mounted-prefix-padding = 2
	format-mounted-prefix-foreground = ${colors.bg2}
	format-mounted-prefix-background = ${colors.stx}
	
	label-mounted = %percentage_used%%
	label-mounted-foreground = ${colors.hlt}
	label-mounted-background = ${colors.bg2}
	label-mounted-underline = ${colors.stx}
	label-mounted-padding = 1
	label-unmounted = %mountpoint% not mounted
	label-unmounted-foreground = ${colors.hlt}
	label-unmounted-underline = ${colors.stx}
	label-unmounted-padding = 2

[module/i3]
	type = internal/i3

	index-sort = true

	fuzzy-matching = true

	wrapping-scroll = false

	; Only show workspaces on the same output as the bar
	pin-workspaces = true

	format = <label-state>
	format-underline = ${colors.stx}	

	workspace-label = %index%
	workspace-spacing = 2

	label-focused = ${self.workspace-label}
	label-focused-background = ${colors.stx}
	label-focused-foreground = ${colors.bg2}
	label-focused-underline= ${self.format-underline}
	label-focused-padding = ${self.workspace-spacing}
	label-unfocused = ${self.workspace-label}
	label-unfocused-padding = ${self.workspace-spacing}
	label-unfocused-underline= ${self.format-underline}
	label-unfocused-background = ${colors.bg2}
	label-unfocused-foreground = ${colors.stx}
	label-visible = ${self.workspace-label}
	label-visible-background = ${self.label-focused-background}
	label-visible-underline = ${self.format-underline}
	label-visible-padding = ${self.workspace-spacing}
	label-urgent = ${self.workspace-label}
	label-urgent-background = ${colors.hlt}
	label-urgent-foreground = ${colors.bg2}
	label-urgent-underline = ${self.format-underline}
	label-urgent-padding = ${self.workspace-spacing}
	;label-separator = //

